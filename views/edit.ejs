<!DOCTYPE html>
<html lang="en" dir="ltr">
<%- include ('./partials/head.ejs') %>
	<body id="body">
		<nav class="navbar navbar-expand-lg navbar-light bg-light">
<div class="container-fluid">
<h1 class="appTitle">Accomplished.</h1>
<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
	<span class="navbar-toggler-icon"></span>
</button>
<div class="collapse navbar-collapse" id="navbarNav">
	<ul class="navbar-nav">
		<li class="nav-item">
			<a class="nav-link active" aria-current="page" href="#"><button id="button-color" class="btn" onclick="window.location.href='/to-do'">Home</button></a>
		</li>
		<li class="nav-item">
			<a class="nav-link active" aria-current="page" href="#"><button id="button-color" class="btn" onclick="window.location.href='/to-do/new'">Add New Item To Accomplish</button></a>
		</li>
	</ul>
</div>
</div>
</nav>
		<div id="formContainer">
			<form class="edit-form-container" action="/to-do/<%=toDo._id%>?_method=PUT" method="POST">
				<h2 class="edit">Main Accomplishment: </h2><input class="inputBox" type="text" name="toDo" value="<%=toDo.toDo%>"/><br/>
					<% 	for (let i = 0 ; i < toDo.subToDo.length; i++) {
							if (toDo.subToDo[i].subTODO !== undefined) {
								if (toDo.subToDo[i].subTODO !== null) {
									if (toDo.subToDo[i].subTODO !== "") {	%>
							<br/>
							<div id="miniAccomplishment">
							<h5>Mini Accomplishment:</h5>
							<input class="inputBox" type="text" name="subToDo<%=i%>" value="<%=toDo.subToDo[i].subTODO%>"/><br/>
							</div>
					<% }
						}
					}
				 } %>
			</br>
					Top Priority?:
					<input
									type="checkbox"
									name="priority"
									<% if (toDo.priority === true) { %>
											checked
											<% } %>
											/>

											<br/>
											<br/>
									<div id="addNotes">
										<h5>Notes:</h5>
											<textarea class="inputNotes" type="text" name="notes" value="<%=toDo.notes%>"><%=toDo.notes%></textarea>
											</div>
											<br/>
					 <input id="button-color" class="btn" type="submit" value="Submit Changes"/>
				 </form>
			</div>

			<%- include ('./partials/footer.ejs') %>
	</body>
</html>
